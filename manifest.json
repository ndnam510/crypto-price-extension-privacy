{
  "manifest_version": 3,
  "name": "Crypto Price Peek",
  "version": "1.0.0",
  "description": "Bôi đen ký hiệu coin (BTC, ETH, WLD...), click chuột phải để xem giá USD từ CoinGecko trong pop-up nhỏ ngay trên trang.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.coingecko.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
 "action": {
    "default_popup": "popup.html"
  }
}